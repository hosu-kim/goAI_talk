{
  "app_name": "Football Match Results Q&A Bot",
  "version": "1.0.0",
  "language": "en",
  "default_timezone": "UTC",
  "ui": {
    "theme": "light",
    "display_matches_limit": 20,
    "recent_questions_limit": 5
  },
  "data": {
    "max_cache_age_hours": 24,
    "fetch_goals_in_parallel": true,
    "max_worker_threads": 5
  },
  "preferred_leagues": [
    "Premier League",
    "La Liga",
    "Serie A",
    "Bundesliga",
    "Ligue 1"
  ],
  "max_results": 15,
  "is_demo_mode": true,
  "api_settings": {
    "football_api": {
      "base_url": "https://v3.football.api-sports.io",
      "rate_limit_per_second": 10,
      "timeout_seconds": 30
    },
    "openai": {
      "temperature": 0.3,
      "max_tokens": 800
    },
    "football": {
      "timeout": 30,
      "cache_expiry": 3600
    }
  }
}
